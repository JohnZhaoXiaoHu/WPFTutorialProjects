<UserControl x:Class="Zhaoxi.SCADA.Demo.Components.WaterTank"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zhaoxi.SCADA.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="250">

    <Grid>
        <Border BorderBrush="LightGray" BorderThickness="5,0,5,5" CornerRadius="0,0,10,10">
            <Border Background="#337888" VerticalAlignment="Bottom"
                    Height="{Binding WaterHeight,RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </Border>
    </Grid>
</UserControl>
